<?xml version='1.0' encoding='UTF-8'?>
<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'
     xmlns:difx='http://schemas.microsoft.com/wix/DifxAppExtension'>

     <?include constants.wxi ?>

      <Product Id="*"
            Name="Virtio-win-guest-tools"
            Language="1033"
            Version="$(var.Version)"
            Manufacturer="Red Hat, Inc."
            UpgradeCode="$(var.UpgradeCode)">
            <Package Id="*"
                  InstallerVersion="200"
                  Compressed="yes"
                  InstallScope="perMachine"
                  Description="Virtio-win installer for drivers and agents"/>
            <PropertyRef Id="$(var.LaunchCondition)" />
            <PropertyRef Id="Set_ProductName" />
            <PropertyRef Id="Set_oVirt_Agent_Properties" />
            <PropertyRef Id="Set_Old_WGT_props" />
            <MajorUpgrade 
                  DowngradeErrorMessage="A newer version of [ProductName] is already installed."
                  Schedule="afterInstallInitialize" />
            <UIRef Id="WixUI_FeatureTree" />
            <WixVariable Id="WixUIBannerBmp" Value="graphics/horizontal_banner_$(var.Upstream).bmp" />
            <WixVariable Id="WixUIDialogBmp" Value="graphics/background_$(var.Upstream).bmp" />
            <WixVariable Id="WixUILicenseRtf" Value="License.rtf" />
            <Icon Id="icon.ico" SourceFile="graphics/icon_$(var.Upstream).ico"/>
            <Property Id="ARPPRODUCTICON" Value="icon.ico" />
            <MediaTemplate EmbedCab="yes" />
            <PropertyRef Id="DirectoryProperty" />
            <PropertyRef Id="FeatureProperty" />
            <PropertyRef Id="InstallSequenceProperty" />
      </Product>
</Wix>